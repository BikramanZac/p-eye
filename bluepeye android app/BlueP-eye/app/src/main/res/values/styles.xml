<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Button.Object" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Red</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.Button.Text" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Green</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="AppTheme.Button.Face" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/Blue</item>
        <item name="android:textColor">@color/White</item>
    </style>
</resources>
